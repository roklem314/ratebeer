<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
      <%= @user.username %>
    </tr>
     <p>
       Has made <%= @user.average_rating %>
     </p>
  </thead>

  <tbody>
    <% @user.ratings.each do |rating| %>
    li>
      <%= rating %>
      <% if @user == current_user %>
        <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </li>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
<p><td><%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %></td></p>
